<mvc:View
    controllerName="com.quanto.solutions.ui.smartoffice.controller.Reporting"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
	xmlns:core="sap.ui.core"
    xmlns:mc="sap.suite.ui.microchart"
    xmlns:layout="sap.ui.layout"
    xmlns:viz="sap.viz.ui5"
    height="100%">
    
    <Shell id="shell">
        <App id="app">
            <pages>
            
                <Page
                    id="page" 
                    title="Reporting zur Energie- und Raumnutzung"
                    class="sapUiContentPadding sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer"
                    showNavButton="true" navButtonPress="onNavBack"
                >

            <!-- Seitentext Information-->
            <content>
                <VBox>                    
                    <Text text="Diese Seite enthält Berichte zur Energie- und Raummnutzung des DECT-Thermostates und dem WLAN-Jalousienmodel." />
                </VBox>
            </content>
            <!-- Dect-Thermostat Card Control Header folgt-->
            <f:Card class="sapUiMediumMargin" width="300px">
                <f:header>
                    <card:Header title="Dect-Thermostat" subtitle="Reporting" />
                </f:header>

            <!-- Dect-Thermostat Card Control Content folgt, !muss angepasst werden!-->
                <f:content>
                    <List>
				        <CustomListItem>
					        <HBox alignItems="Center" justifyContent="SpaceBetween">
						        <VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
							        <Title level="H3" text="Ist-Wert der Temperatur:" />
                                    <!--<<Text id="actualvaluetempid" text="{InputValue'}" width="100%"/>-->
						        </VBox>
                            </HBox>
				        </CustomListItem>
                        <CustomListItem>
					        <HBox alignItems="Center" justifyContent="SpaceBetween">
						        <VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
                                    <Title level="H3" text="Datum eingeben:" />
                                    <DatePicker
			                            id="DP1"
                                        placeholder="Datum auswählen"
                                        valueFormat="yyyy-MM-dd"
                                        displayFormat="short"
			                            change="handleTempChange"
			                            class="sapUiSmallMarginBottom"
                                    />
                                    <!--<Text id="supposedlvaluejalid" text="{InputValue'}" width="100%"/>-->
						        </VBox>
                            </HBox>
				        </CustomListItem>
						<CustomListItem>
					        <HBox alignItems="Center" justifyContent="SpaceBetween">
						        <VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
                                    <Title level="H3" text="Letzte Einträge:" />
                                    <Table id="tbl1" items="{/data}">
                                            <columns>
                                                <Column>
                                                    <Text text="Tageszeit" />
                                                </Column>
                                                <Column>
                                                    <Text text="Status in °C" />
                                                </Column>
                                            </columns>
                                            <items>
                                                <ColumnListItem>
                                                    <cells>
                                                        <HBox>
                                                            <Text  text="{tageszeit}"/>
                                                        </HBox>
                                                        <HBox>
                                                            <Text  text="{value}"/>
                                                        </HBox>
                                                    </cells>
                                                </ColumnListItem>
                                            </items>
                                        </Table>
                                    <!--<Text id="supposedlvaluetemp" text="{InputValue'}" width="100%"/>-->
						        </VBox>
                            </HBox>
				        </CustomListItem>
			        </List>
                </f:content>
            </f:Card>

            <!-- WLAN-Jalousienmodul Card Control Header folgt-->
            <f:Card class="sapUiMediumMargin" width="300px">
                <f:header>
                    <card:Header title="WLAN-Jalousienmodul" subtitle="Reporting" />
                </f:header>

            <!-- WLAN-Jalousienmodul Card Control Content folgt, !muss angepasst werden!-->
                <f:content>
                    <List>
				        <CustomListItem>
					        <HBox alignItems="Center" justifyContent="SpaceBetween">
						        <VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
							        <Title level="H3" text="Ist-Wert in Prozent:" />
                                    <!--<Text id="actualvaluejalid" text="{InputValue'}" width="100%"/>>-->
						        </VBox>
                            </HBox>
				        </CustomListItem>
                        <CustomListItem>
					        <HBox alignItems="Center" justifyContent="SpaceBetween">
						        <VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
                                    <Title level="H3" text="Datum eingeben:" />
                                    <DatePicker
			                            id="DP2"
                                        placeholder="Datum auswählen"
                                        valueFormat="yyyy-MM-dd"
                                        displayFormat="short"
			                            change="handleJalChange"
			                            class="sapUiSmallMarginBottom"
                                    />
                                    <!--<Text id="supposedlvaluejalid" text="{InputValue'}" width="100%"/>-->
						        </VBox>
                            </HBox>
				        </CustomListItem>
						<CustomListItem>
					        <HBox alignItems="Center" justifyContent="SpaceBetween">
						        <VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
                                    <Title level="H3" text="Letzte Einträge:" />
                                    <Table id="tbl2" items="{/data}">
                                            <columns>
                                                <Column>
                                                    <Text text="Tageszeit" />
                                                </Column>
                                                <Column>
                                                    <Text text="Status in %" />
                                                </Column>
                                            </columns>
                                            <items>
                                                <ColumnListItem>
                                                    <cells>
                                                        <HBox>
                                                            <Text  text="{tageszeit}"/>
                                                        </HBox>
                                                        <HBox>
                                                            <Text  text="{value}"/>
                                                        </HBox>
                                                    </cells>
                                                </ColumnListItem>
                                            </items>
                                        </Table>
                                    <!--<Text id="supposedlvaluejalid" text="{InputValue'}" width="100%"/>-->
						        </VBox>
                            </HBox>
				        </CustomListItem>
			        </List>
                </f:content>
            </f:Card>

