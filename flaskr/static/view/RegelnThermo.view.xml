<mvc:View xmlns:core="sap.ui.core"
		controllerName="com.quanto.solutions.ui.smartoffice.controller.RegelnThermo"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.m"
		xmlns:f="sap.f"
		xmlns:layout="sap.ui.layout"
		height="100%">
	<Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="Regeln für Thermostate verwalten" titleAlignment="Center" showNavButton="true" navButtonPress="onNavBack">
                    <content> 
					<Text text="Hier können Sie Regeln für die min. und max. Temperatur der Thermostate festlegen. Diese sind nicht abhängig vom Wochentag und gelten immer." textAlign="Center" width="100%" class="sapUiMediumMargin"/>
					<Table id="tbl">
                                <columns>
                                    <Column />
                                    <Column>
                                        <Text text="Mindesttemperatur" />
                                    </Column>
									<Column>
                                        <Text text="Maximaltemperatur" />
                                    </Column>
                                </columns>
                                
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <HBox/>
                                            <HBox>
                                                <Input
                                                    id="minTemp"
                                                    value="{/InputValue}"
                                                    description="°C"
                                                    width="150px"
                                                    fieldWidth="80%"
                                                    showClearIcon="true"
                                                    class="sapUiSmallMarginBottom"
                                                    change="changeMinTemp"
                                                />
                                            </HBox>
											<HBox>
                                                <Input
                                                    value="28"
                                                    description="°C"
                                                    width="150px"
                                                    fieldWidth="80%"
                                                    showClearIcon="true"
                                                    class="sapUiSmallMarginBottom"
                                                />
                                            </HBox>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>