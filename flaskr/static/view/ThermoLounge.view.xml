<mvc:View
	xmlns:core="sap.ui.core"
    controllerName="com.quanto.solutions.ui.smartoffice.controller.ThermoLounge"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    height="100%"
>
	<Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="Thermostate" titleAlignment="Center" showNavButton="true" navButtonPress="onNavBack">
                    <content> 
                        <layout:VerticalLayout id="verticallayoutcontent" width="100%" alignItems="Center">
                        <VBox alignItems="Center" width="100%">
                            <Text id="textThermo" text="Aktuelle Temperatur" class="sapUiMediumMarginTop sapUiSmallMarginBottom" />
                            <StepInput
                                id="CurrentTemp"
                                value="20"
                                width="100%"
                                textAlign="Center"
                            />
                        </VBox>
                        <VBox alignItems="Center" width="100%">
                            <Text id="textMinTemp" text="Mindesttemperatur" class="sapUiMediumMarginTop sapUiSmallMarginBottom"/>
                            <StepInput
                                id="MinTemp"
                                value="18"
                                width="100%"
                                textAlign="Center"
                            />
                        </VBox>
                        </layout:VerticalLayout>
                        </content>

        <!-- DynamicPage Footer -->
		    <footer>
				<OverflowToolbar id="toolbarjalousien" class="sapUiMediumMarginTop">
                    <ToolbarSpacer id="tbs1"/>
                    <!-- <Button id="buttonMinTemp" text="Min. Temp." /> -->
                    <Button id="buttonWopl" text="Wochenplan" press="pressnavWeeklyPlanThermo"/>
                    <ToolbarSpacer id="tbs2"/>
                </OverflowToolbar>
			</footer>
        </Page>
        </pages>
        </App>
    </Shell>
</mvc:View>