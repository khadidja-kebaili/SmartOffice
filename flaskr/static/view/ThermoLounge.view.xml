<mvc:View
    xmlns:core="sap.ui.core"
    controllerName="com.quanto.solutions.ui.smartoffice.controller.ThermoLounge"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    height="100%"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="Thermostate" titleAlignment="Center" showNavButton="true" navButtonPress="onNavBack">
                    <content> 
                        <Table id="tbl">
                            <columns>
                                <Column />
                                <Column>
                                    <Text text="IST-Temperatur" />
                                </Column>
                                <Column>
                                    <Text text="SOLL-Temperatur" />
                                </Column>
                            </columns>
                                
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <HBox/>
                                        <HBox>
                                            <StepInput
                                                id="currentTemp"
                                                value="{targetType: 'any'}"
                                                displayValuePrecision="1"
                                                description="°C"
                                                width="100%"
                                                textAlign="Center"
                                                editable="false"
                                            />
                                        </HBox>
                                        <HBox>
                                            <StepInput
                                                id="targetTemp"
                                                value="{targetType: 'any'}"
                                                displayValuePrecision="1"
                                                description="°C"
                                                width="100%"
                                                textAlign="Center"
                                                change="changeTargetTemp"
                                            />
                                        </HBox>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </content>

                    <!-- DynamicPage Footer -->
                    <footer>
                        <OverflowToolbar id="toolbarjalousien" class="sapUiMediumMarginTop">
                            <ToolbarSpacer id="tbs1"/>
                                <Button id="Regeln" text="Regeln" press="pressNavRegelnThermo"/>
                                <Button id="buttonWopl" text="Wochenplan" press="pressnavWeeklyPlanThermo"/>
                            <ToolbarSpacer id="tbs2"/>
                        </OverflowToolbar>
                    </footer>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
