<mvc:View 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="com.quanto.solutions.ui.smartoffice.controller.ThermoMain"
    displayBlock="true"
    height="100%"
>
    <Page
        id="thermoMain"
        title="Thermostate"
        class="sapUiContentPadding sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer"
        titleAlignment="Center"
        showNavButton="true"
        navButtonPress="onNavBack"
    >
		
		<content>
			<GenericTile id="gt1" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" press="goToThermoLounge">
                <TileContent id="tc1">
                        <Text id="t1" text="Lounge"/>
                </TileContent>
            </GenericTile>
            <GenericTile id="gt2" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout">
                <TileContent id="tc2">
                        <Text id="t2" text="Games Corner"/>
                </TileContent>
            </GenericTile>
            <GenericTile id="gt3" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout">
                <TileContent id="tc3">
                        <Text id="t3" text="Besprechung 2a"/>
                </TileContent>
            </GenericTile>
            <GenericTile id="gt4" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout">
                <TileContent id="tc4">
                        <Text id="t4" text="Besprechung 2b"/>
                </TileContent>
            </GenericTile>
		</content>
	</Page>
</mvc:View>
