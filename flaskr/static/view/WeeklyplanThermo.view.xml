<mvc:View xmlns:core="sap.ui.core"
        controllerName="com.quanto.solutions.ui.smartoffice.controller.WeeklyplanThermo"
        xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.m"
		xmlns:f="sap.f"
		xmlns:layout="sap.ui.layout"
		height="100%"
>
     <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="Wochenplan erstellen - Thermostate">
                    <content>
                    <FlexBox id="WochentageContainer" width="100%" alignItems="Center" class="sapUiLargeMarginTop" justifyContent="Center" direction="Column">
                        <Label text="Wähle den Wochentag aus"/>
			<SegmentedButton width="115%" id="SB1" selectionChange="onSelectionChange">
				<items>
					<SegmentedButtonItem text="Mo" />
					<SegmentedButtonItem text="Di" />
					<SegmentedButtonItem text="Mi" />
					<SegmentedButtonItem text="Do" />
					<SegmentedButtonItem text="Fr" />
				</items>
			</SegmentedButton>
            <Text id="selectedItemPreview"/>
            </FlexBox>
                        <FlexBox id="TimeStepContainer" width="100%" class="sapUiLargeMarginTop" alignItems="Center" justifyContent="Center" direction="Column" >
                         <Label text="Erstelle einen Plan für den ausgewählten Wochentag"/>
                         <FlexBox id="TimeStep" width="100%"  alignItems="Center" justifyContent="Center" direction="Row" class="sapUiLargeMarginBegin" >
                        	<TimePicker
                                class="sapUiLargeMarginBegin"
                                id="TP1"
                                width="70%"
                                value="08:00"
                                valueFormat="HH:mm"
                                displayFormat="HH:mm"
                                change="handleChange"/>
                            <StepInput
                                value="20,00"
                                min="15"
                                max="30"
                                width="30%"
                                step="1"
                                editable="true"
                                change="onChange"/>
                                </FlexBox>
                            <FlexBox width="100%"  alignItems="Center" justifyContent="Center" direction="Row" class="sapUiLargeMarginBegin">
                        	<TimePicker
                                class="sapUiLargeMarginBegin"
                                id="TP2"
                                width="70%"
                                value="08:00"
                                valueFormat="HH:mm"
                                displayFormat="HH:mm"
                                change="handleChange"/>
                            <StepInput
                                value="20,00"
                                min="15"
                                max="30"
                                width="30%"
                                step="1"
                                editable="true"
                                change="onChange"/>
                                </FlexBox>
                                <Button   icon="sap-icon://add" type="Transparent" press="onPress" ariaLabelledBy="editButtonLabel"/>
                        </FlexBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
