<mvc:View
    controllerName="com.quanto.solutions.ui.smartoffice.controller.SmartOffice"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        
                        <StepInput
                            id = "sip1"
                            value="20"
                            displayValuePrecision="{displayValuePrecision}"
                            min="15"
                            max="30"
                            width = "250px"
                            step="1"
                            textAlign= "Center"
						change="onChange"/>
                        
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
