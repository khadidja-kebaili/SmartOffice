<mvc:View
    controllerName="com.quanto.solutions.ui.smartoffice.controller.SmartOffice"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <Button 
                            id="B1"
                            text = "Thermostate"
                            press = ".goTo"
                        />
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
